<?xml version="1.0" encoding="UTF-8"?>
<preset optname="AppleTV">
  <!-- define an output file -->
  <output extension="mp4" suffix="AppleTV">
    <!-- define a video stream and options -->
    <video codec="libx264" mode="crf" quality="18" bitrate="8M" buffer="10M" profile="high" level="4.0" pxfmt="yuv420p" faststart="true">
      <filters>
        <!-- define settings for custom scale parser -->
        <scale mode="1" width="1920" height="1080" dar="16/9"></scale>
      </filters>
    </video>
    <!-- define an audio stream and options -->
    <audio codec="libfdk_aac" bitrate="320k"></audio>
  </output>
</preset>
